<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/white">

                    <include
                        android:id="@+id/include_title"
                        layout="@layout/title_return_top" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/include_title"
                        android:src="@drawable/sign_center_bg" />

                    <LinearLayout
                        android:id="@+id/ll_sign_center_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/include_title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/Dim10"
                        android:background="@drawable/person_center_sign_days_background"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sign_center_days_title"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/include_title"
                            android:gravity="center"
                            android:text="本周已签到"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_sign_center_days"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/sign_center_days_title"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/sign_center_days"
                            android:gravity="center"
                            android:textColor="@color/sign_center_sign_title"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_sign_center_sign"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_below="@+id/ll_sign_center_background"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="38dp"
                        android:background="@drawable/sign_center_btn_sign"
                        android:text="签到"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_sign_center_sign"
                        android:layout_marginLeft="@dimen/Dim10"
                        android:layout_marginRight="@dimen/Dim10"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="13">

                        <TextView
                            android:id="@+id/tv_sign_center_monday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/Dim5"
                            android:drawableTop="@drawable/sign_center_gou"
                            android:gravity="center"
                            android:text="周一"
                            android:textSize="@dimen/Dim12" />

                        <View style="@style/sign_center_date_line" />

                        <TextView
                            android:id="@+id/tv_sign_center_tuesday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/Dim5"
                            android:drawableTop="@drawable/sign_center_gou"
                            android:text="周二"
                            android:textSize="@dimen/Dim12" />

                        <View style="@style/sign_center_date_line" />

                        <TextView
                            android:id="@+id/tv_sign_center_wednesday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/Dim5"
                            android:drawableTop="@drawable/sign_center_gou"
                            android:text="周三"
                            android:textSize="@dimen/Dim12" />

                        <View style="@style/sign_center_date_line" />

                        <TextView
                            android:id="@+id/tv_sign_center_thursday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/Dim5"
                            android:drawableTop="@drawable/sign_center_gou"
                            android:text="周四"
                            android:textSize="@dimen/Dim12" />

                        <View style="@style/sign_center_date_line" />

                        <TextView
                            android:id="@+id/tv_sign_center_friday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/Dim5"
                            android:drawableTop="@drawable/sign_center_gou"
                            android:text="周五"
                            android:textSize="@dimen/Dim12" />

                        <View style="@style/sign_center_date_line" />

                        <TextView
                            android:id="@+id/tv_sign_center_saturday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/Dim5"
                            android:drawableTop="@drawable/sign_center_gou"
                            android:text="周六"
                            android:textSize="@dimen/Dim12" />

                        <View style="@style/sign_center_date_line" />

                        <TextView
                            android:id="@+id/tv_sign_center_sunday"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/Dim5"
                            android:drawableTop="@drawable/sign_center_gou"
                            android:text="周日"
                            android:textSize="@dimen/Dim12" />

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Dim10"
                    android:background="#f1f1f1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/Dim10"
                    android:paddingRight="@dimen/Dim10"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sign_center_qd2" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:padding="@dimen/Dim10">

                        <TextView
                            android:id="@+id/tv_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="签到"
                            android:textColor="@color/wjf_font_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/Dim3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/tv_sign"
                            android:layout_toRightOf="@+id/tv_sign"
                            android:drawableLeft="@drawable/sign_center_jf"
                            android:drawablePadding="@dimen/Dim3"
                            android:text="+5积分"
                            android:textColor="@color/sign_center_integral"
                            android:textSize="@dimen/DimS10" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_sign"
                            android:layout_marginTop="@dimen/Dim5"
                            android:text="完成1/1"
                            android:textSize="@dimen/DimS13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_sign_center_sign_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/sign_center_wc"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="已完成"
                            android:textColor="#a9a9a9" />

                        <TextView
                            android:id="@+id/tv_sign_center_go_sign"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@drawable/sign_center_btn_style"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="去签到"
                            android:textColor="#4597fc"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/sign_center_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/Dim10"
                    android:paddingRight="@dimen/Dim10"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sign_center_sc" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:padding="@dimen/Dim10">

                        <TextView
                            android:id="@+id/tv_sign_video_upload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="视频上传"
                            android:textColor="@color/wjf_font_dark" />

                        <TextView
                            android:id="@+id/tv_sign_center_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_sign_video_upload"
                            android:layout_marginTop="@dimen/Dim5"
                            android:text="完成1/1"
                            android:textSize="@dimen/DimS13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/Dim3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/tv_sign_video_upload"
                            android:layout_toRightOf="@+id/tv_sign_video_upload"
                            android:drawableLeft="@drawable/sign_center_jf"
                            android:drawablePadding="@dimen/Dim3"
                            android:text="+20积分"
                            android:textColor="@color/sign_center_integral"
                            android:textSize="@dimen/DimS10" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/sign_center_wc"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="已完成"
                            android:textColor="#a9a9a9" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@drawable/sign_center_btn_style"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="去上传"
                            android:textColor="#4597fc" />
                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/sign_center_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/Dim10"
                    android:paddingRight="@dimen/Dim10"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sign_center_fx" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:padding="@dimen/Dim10">

                        <TextView
                            android:id="@+id/tv_sign_video_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分享视频"
                            android:textColor="@color/wjf_font_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/Dim3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/tv_sign_video_share"
                            android:layout_toRightOf="@+id/tv_sign_video_share"
                            android:drawableLeft="@drawable/sign_center_jf"
                            android:drawablePadding="@dimen/Dim3"
                            android:text="+5积分"
                            android:textColor="@color/sign_center_integral"
                            android:textSize="@dimen/DimS10" />

                        <TextView
                            android:id="@+id/tv_sign_video_share_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_sign_video_share"
                            android:layout_marginTop="@dimen/Dim5"
                            android:text="完成0/2"
                            android:textSize="@dimen/DimS13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/sign_center_wc"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="已完成"
                            android:textColor="#a9a9a9" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@drawable/sign_center_btn_style"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="去上传"
                            android:textColor="#4597fc" />
                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/sign_center_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/Dim10"
                    android:paddingRight="@dimen/Dim10"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sign_center_gk" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:padding="@dimen/Dim10">

                        <TextView
                            android:id="@+id/tv_sign_watch_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="观看视频30分钟"
                            android:textColor="@color/wjf_font_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/Dim3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/tv_sign_watch_video"
                            android:layout_toRightOf="@+id/tv_sign_watch_video"
                            android:drawableLeft="@drawable/sign_center_jf"
                            android:drawablePadding="@dimen/Dim3"
                            android:text="+5积分"
                            android:textColor="@color/sign_center_integral"
                            android:textSize="@dimen/DimS10" />

                        <TextView
                            android:id="@+id/tv_sign_watch_video_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_sign_watch_video"
                            android:layout_marginTop="@dimen/Dim5"
                            android:text="完成0/2"
                            android:textSize="@dimen/DimS13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/sign_center_wc"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="已完成"
                            android:textColor="#a9a9a9" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@drawable/sign_center_btn_style"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="去上传"
                            android:textColor="#4597fc" />
                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/sign_center_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/Dim10"
                    android:paddingRight="@dimen/Dim10"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sign_center_sc" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:padding="@dimen/Dim10">

                        <TextView
                            android:id="@+id/tv_sign_collection_of_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏视频"
                            android:textColor="@color/wjf_font_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/Dim3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/tv_sign_collection_of_video"
                            android:layout_toRightOf="@+id/tv_sign_collection_of_video"
                            android:drawableLeft="@drawable/sign_center_jf"
                            android:drawablePadding="@dimen/Dim3"
                            android:text="+5积分"
                            android:textColor="@color/sign_center_integral"
                            android:textSize="@dimen/DimS10" />

                        <TextView
                            android:id="@+id/v_sign_collection_of_video_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_sign_collection_of_video"
                            android:layout_marginTop="@dimen/Dim5"
                            android:text="完成1/1"
                            android:textSize="@dimen/DimS13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/sign_center_wc"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="已完成"
                            android:textColor="#a9a9a9" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:background="@drawable/sign_center_btn_style"
                            android:drawablePadding="@dimen/Dim5"
                            android:gravity="center"
                            android:text="去上传"
                            android:textColor="#4597fc" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f1f1f1"
                    android:paddingTop="@dimen/Dim10">

                    <include layout="@layout/bottom_layout_copyright" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>