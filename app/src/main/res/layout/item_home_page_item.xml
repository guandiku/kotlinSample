<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="bottom"
        android:paddingLeft="@dimen/Dim10">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/activity_main_fl"
            android:drawablePadding="5dp"
            android:text="电影分类"
            android:textColor="@color/wjf_font_dark"
            android:textSize="@dimen/DimS15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/Dim5"
            android:drawableRight="@drawable/activity_main_more2"
            android:paddingBottom="@dimen/Dim3"
            android:paddingLeft="@dimen/Dim10"
            android:paddingRight="@dimen/Dim10"
            android:text="更多" />
    </RelativeLayout>
</LinearLayout>