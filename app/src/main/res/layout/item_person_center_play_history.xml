<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_item_image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_item_play_history"
                android:layout_width="95dp"
                android:layout_height="60dp"
                android:background="@drawable/person_center_watch_record" />

            <TextView
                android:id="@+id/tv_item_play_history_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_item_play_history"
                android:layout_alignLeft="@+id/iv_item_play_history"
                android:layout_margin="3dp"
                android:text="54%"
                android:textColor="@color/white"
                android:textSize="9dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_play_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="我的前半生18"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>