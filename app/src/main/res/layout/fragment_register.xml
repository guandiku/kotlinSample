<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_register_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input_phone_number"
            style="@style/cursor_style"
            android:hint="@string/input_phone_number_please"
            android:inputType="number"
            android:maxLength="12"
            android:paddingLeft="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/input_edit_text">

            <EditText
                android:id="@+id/message_code"
                style="@style/cursor_style"
                android:hint="@string/message"
                android:maxLength="15"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/btn_check_code"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_general_style"
                android:text="@string/get_message_code"
                android:textColor="@color/white" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_input_password"
            style="@style/cursor_style"
            android:layout_marginTop="12dp"
            android:hint="@string/input_password_please"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/et_check_password"
            style="@style/cursor_style"
            android:layout_marginTop="12dp"
            android:hint="@string/check_input_password_please"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/btn_register_commit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/button_general_style"
            android:text="@string/commit"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <include layout="@layout/bottom_layout_copyright" />
    </LinearLayout>

</LinearLayout>